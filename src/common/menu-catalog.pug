//- Mixins
include mixin.pug

.menu-catalog#catalog
  .menu-catalog__container.container
    ul.menu-catalog__list#catalog-tabs 
      //- Data menu catalog
      - var catalog = [{tab: true, id: 'sofas', name: 'Дизайнерская мебель', href: `sofas.html`}, {tab: true, id: 'partitions', name: 'Межкомнатные перегородки', href: '#'}, {name: 'Поиск проекта по фото', href: '#'}, {name: 'Услуги дизайнера интерьера', href: '#'}]

      each section, index in catalog 
        li.menu-catalog__item
          if section.tab 
            .menu-catalog__link.catalog-tab(data-tab= section.id)
              span.menu-catalog__link-desc
                = section.name
                +icon('arrow-1')
              picture
                source.menu-catalog__img(class=`menu-catalog__img-${index + 1}`, srcset=`img/menu-catalog/${index + 1}.png`)
                img.menu-catalog__img(class=`menu-catalog__img-${index + 1}`, src=`img/menu-catalog/${index + 1}.png`, alt=`Изображение-${section.name}`)
          else
            a(href= section.href).menu-catalog__link
              span.menu-catalog__link-desc
                = section.name
                +icon('arrow-1')
              picture
                source.menu-catalog__img(class=`menu-catalog__img-${index + 1}`, srcset=`img/menu-catalog/${index + 1}.png`)
                img.menu-catalog__img(class=`menu-catalog__img-${index + 1}`, src=`img/menu-catalog/${index + 1}.png`, alt=`Изображение-${section.name}`)
    .subsection-catalog#catalog-content
      button.subsection-catalog__close#catalog-close(aria-label="Закрыть каталог")
        +icon('close-2')
      button.subsection-catalog__back#catalog-back
        +icon('arrow-1')
        | Вернуться назад
      .subsection-catalog__container#catalog-tab-content 
        h2.subsection-catalog__title.us-title Дизайнерская мебель 
        ul.subsection-catalog__list 
          //- Data subsection catalog
          - var subsection = [{name: 'Спальня', href: '#'}, {name: 'Кухня', href: '#'}, {name: 'Гостиная', href: '#'}, {name: 'Офис и домашний офис', href: '#'}, {name: 'Прихожая', href: '#'}, {name: 'Публичные пространства', href: '#'}]

          each section, index in subsection
            li.subsection-catalog__item 
              picture
                source.subsection-catalog__img(srcset=`img/menu-catalog/subsection/${index + 1}.png`)
                img.subsection-catalog__img(src=`img/menu-catalog/subsection/${index + 1}.png`, alt=`Изображение-${section.name}`)
              a(href= section.href).subsection-catalog__link= section.name