//- Mixins
include mixin.pug

header.header(id=banner && 'header-banner')
  .header__container.container
    button.header__btn-menu#menu-open
      +icon("burger")
    a(href="main.html", aria-label="Логотип").header__logo
      img(src="img/logo.svg", alt="Катарсис")
      img(src="img/logo-min.svg", alt="Катарсис")
    nav.header__nav#menu
      .header__btn-box-close#menu-close
        button.header__btn-close
          +icon("close")
      ul.header__nav-list 
        //- Data nav
        - var nav = [{id: "main", name: "Главная", href: "main.html"}, {id: "catalog", name:"Каталог", href: catalogPath ? catalogPath : "main.html"}, {id: "portfolio", name: "Портфолио", href: "portfolio.html"}, {id: "about", name: "О компании", href: "about.html"}, {id: "contacts", name: "Контакты", href: "contacts.html"}, {id: "favorite", name: "Избранное", href: "favorite.html"}]

        each link in nav
          li.header__nav-item
            if link.id == "catalog" && banner
              button.header__nav-link.catalog-open= link.name
            else
              a(href= link.href).header__nav-link= link.name
    .header__btn-box 
      a(href="favorite.html", aria-label="Избранные").header__btn.favorite
        +icon("favorite")
      a(href="basket.html", aria-label="Корзина").header__btn
        +icon("basket")