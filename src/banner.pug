doctype html
html(lang="en")
  head

    //- Head
    include common/head.pug

    title Катарсис

    //- Swiper-Slider
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css")
    script(src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js")
    //- Basic Styles
    link(rel="stylesheet", href="style/main.min.css")
    //- Basic JavaScript
    script(src="js/main.min.js", defer)
  body

    //- Mixins
    include common/mixin.pug

    //- Header
    include common/header.pug

    main 

      section.banner.container 
        .banner__slider.swiper
          .swiper-wrapper
            - for(var slide = 1; slide < 3; slide++)
              .banner__slide.swiper-slide
                - for(var img = 1; img < 4; img++)
                  picture
                    source(srcset='img/banner/1.png').banner__img
                    img(src='img/banner/1.png', alt=`Интерьер-${img}`).banner__img
